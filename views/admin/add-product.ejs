<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add New Product | Lush Jewels Admin</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">

  <!-- Header -->
  <header class="bg-purple-700 text-white py-5 shadow-md">
    <div class="container mx-auto flex justify-between items-center px-6">
      <h1 class="text-2xl font-bold">âž• Add New Product</h1>
      <a href="/admin/dashboard" class="bg-yellow-400 text-black px-4 py-2 rounded hover:bg-yellow-500">
        ðŸ”™ Back to Dashboard
      </a>
    </div>
  </header>

  <!-- Form Section -->
  <main class="container mx-auto px-6 py-10">
    <div class="bg-white rounded-lg shadow-lg p-8 max-w-2xl mx-auto">
      <h2 class="text-xl font-semibold mb-6 text-gray-800">Enter Product Details</h2>

      <form action="/admin/add-product" method="POST" enctype="multipart/form-data" 
         class="space-y-4" onsubmit="showToast('Uploading product...', 'info')">


        <div>
          <label class="block text-gray-700 mb-1">Product Name</label>
          <input type="text" name="name" required class="border p-2 w-full rounded focus:ring-2 focus:ring-purple-600">
        </div>

        <div>
          <label class="block text-gray-700 mb-1">Price</label>
          <input type="text" name="price" required class="border p-2 w-full rounded focus:ring-2 focus:ring-purple-600">
        </div>

        <div>
          <label class="block text-gray-700 mb-1">Category</label>
          <select name="category" required class="border p-2 w-full rounded focus:ring-2 focus:ring-purple-600">
            <option value="">-- Select Category --</option>
            <option value="necklaces">Necklaces</option>
            <option value="rings">Rings</option>
            <option value="earrings">Earrings</option>
            <option value="bracelets">Bracelets</option>
          </select>
        </div>

        <div>
          <label class="block text-gray-700 mb-1">Design</label>
          <input type="text" name="design" class="border p-2 w-full rounded focus:ring-2 focus:ring-purple-600">
        </div>

        <div>
          <label class="block text-gray-700 mb-1">Material</label>
          <input type="text" name="material" class="border p-2 w-full rounded focus:ring-2 focus:ring-purple-600">
        </div>

        <div>
          <label class="block text-gray-700 mb-1">Occasion</label>
          <input type="text" name="occasion" class="border p-2 w-full rounded focus:ring-2 focus:ring-purple-600">
        </div>

        <div>
          <label class="block text-gray-700 mb-1">Description</label>
          <textarea name="description" rows="3" class="border p-2 w-full rounded focus:ring-2 focus:ring-purple-600"></textarea>
        </div>

        <div>
          <label class="block text-gray-700 mb-1">Item Description</label>
          <textarea name="itemDescription" rows="3" class="border p-2 w-full rounded focus:ring-2 focus:ring-purple-600"></textarea>
        </div>

        <div>
          <label class="block text-gray-700 mb-1">Upload Images (up to 4)</label>
          <input type="file" name="images" multiple accept="image/*" class="border p-2 w-full rounded focus:ring-2 focus:ring-purple-600 bg-gray-50">
        </div>

        <button type="submit" class="w-full bg-purple-700 text-white py-3 rounded font-semibold hover:bg-purple-800">
          ðŸ’¾ Save Product
        </button>
      </form>
    </div>
  </main>

  <!-- Footer -->
  <footer class="text-center py-4 bg-gray-900 text-white mt-10">
    &copy; 2025 Lush Jewels Admin Panel
  </footer>

    <!-- Toast Container -->
  <!-- âœ… Toast Container -->
  <!-- âœ… Center Toast Container -->
  <div id="toast-container"
      class="fixed inset-0 flex flex-col items-center justify-center pointer-events-none space-y-3 z-50">
  </div>


  <!-- âœ… Custom Confirmation Modal -->
  <div id="confirm-box" class="hidden fixed inset-0 bg-black/40 flex items-center justify-center z-50">
    <div class="bg-white rounded-lg shadow-lg w-80 p-6 text-center">
      <p id="confirm-message" class="text-gray-800 text-lg mb-6">Are you sure?</p>
      <div class="flex justify-center gap-4">
        <button id="confirm-yes" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded">Yes</button>
        <button id="confirm-no" class="bg-gray-400 hover:bg-gray-500 text-white px-4 py-2 rounded">No</button>
      </div>
    </div>
  </div>



<script>
    /* ================================
     ðŸ”” TOAST SYSTEM
  ================================= */
  function showToast(message, type = "info") {
    const toast = document.createElement("div");
    const colors = {
      success: "bg-green-600",
      error: "bg-red-600",
      info: "bg-blue-600",
      warning: "bg-yellow-500 text-black"
    };

    toast.className = `${colors[type]} text-white px-6 py-3 rounded-lg shadow-lg text-lg font-medium
                       transform transition-all duration-500 ease-in-out opacity-0 scale-95`;
    toast.textContent = message;
    toast.style.pointerEvents = "auto"; // allow hover if needed

    const container = document.getElementById("toast-container");
    container.appendChild(toast);

    // Fade in
    setTimeout(() => {
      toast.classList.remove("opacity-0", "scale-95");
    }, 50);

    // Fade out
    setTimeout(() => {
      toast.classList.add("opacity-0", "scale-95");
      setTimeout(() => toast.remove(), 500);
    }, 3000);
  }


  /* ================================
     â“ CONFIRMATION MODAL
  ================================= */
  function showConfirm(message, onConfirm) {
    const modal = document.getElementById("confirm-box");
    const msg = document.getElementById("confirm-message");
    const yes = document.getElementById("confirm-yes");
    const no = document.getElementById("confirm-no");

    msg.textContent = message;
    modal.classList.remove("hidden");

    yes.onclick = () => {
      modal.classList.add("hidden");
      onConfirm(true);
    };
    no.onclick = () => {
      modal.classList.add("hidden");
      onConfirm(false);
    };
  }
</script>


</body>
</html>
