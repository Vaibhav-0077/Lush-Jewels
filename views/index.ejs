<section id="products" class="py-16 bg-gray-100" style="background: linear-gradient(135deg, #f8e8ee, #fdecef);">
  <div class="w-full max-w-[1500px] mx-auto px-4">
    <h2 class="text-4xl font-bold text-center mb-8">Our Collections</h2>
    <p class="text-lg text-center mb-12 max-w-3xl mx-auto">
      Discover our exquisite jewelry pieces â€” from classic rings to elegant necklaces and timeless bracelets.
    </p>

    <% if (products && products.length > 0) { %>
      <!-- Full-width grid: 4 boxes per row, no extra space -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 justify-items-stretch">
        <% products.forEach(p => { %>
          <div class="product-card bg-white rounded-xl shadow-lg p-6 hover:shadow-2xl transition-all duration-300 w-full"
               data-id="<%= p._id %>">
            <img
              src="<%= p.img.startsWith('http') ? p.img : ('/' + p.img) %>"
              alt="<%= p.name %>"
              class="w-full h-80 object-cover rounded-lg"
              onerror="this.style.display='none'; this.parentElement.style.backgroundColor='#f0f0f0'"
            />
            <h3 class="text-xl font-semibold mt-4 text-gray-800"><%= p.name %></h3>
            <p class="text-gray-600 text-lg mb-3">â‚¹<%= p.price %></p>
            <button
              class="relative w-full px-6 py-3 mt-2
                    rounded-full
                    bg-gradient-to-r from-pink-300 to-pink-400
                    text-gray-900 font-medium
                    shadow-lg
                    hover:from-pink-400 hover:to-pink-500
                    transition">

              <!-- Inner white border -->
              <span
                class="absolute inset-1 rounded-full border border-white/100 pointer-events-none">
              </span>

              View Details
            </button>

          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p class="text-center text-gray-500">No products available.</p>
    <% } %>
  </div>
</section>









