  <header class=" shadow-md sticky top-0 z-50" style="background-color: #f8e8ee; font-family: Times, Times New Roman, serif; font-size: 1.1rem;">
    <div class="container mx-auto px-6 py-4">
      <div class="flex items-center">
        <!-- Left: Site Title -->
        <div class="flex items-center h-full flex-shrink-0">
            <a href="/" class="h-full flex items-center">
              <img
                src="/images/lush_jewels_header_logo.png"
                alt="Lush Jewellery Logo"
                class="h-20 w-auto object-contain"
              />
            </a>
          </div>

        <!-- Center: Search Box (hidden on small screens) -->
        <div class="flex-grow flex justify-center hidden lg:flex mx-6">
            
          <!-- </button> -->
        </div>

        <!-- Right: Navigation Menu -->
        <nav class="hidden lg:flex space-x-6 flex-shrink-0 mr-16">
          <a href="/" class="text-gray-600 hover:text-gray-900">Home<span class="text-xs ml-1">></span></a>


          <% if (session && session.user) { %>
            <a href="/user/account" class="text-gray-600 hover:text-gray-900 ml-4">My Account<span class="text-xs ml-1">></span></a>
          <% } else { %>
            <a href="/user/login" class="text-gray-600 hover:text-gray-900 ml-4">Login<span class="text-xs ml-1">></span></a>
          <% } %>

          <!-- <a href="" class="text-gray-600 hover:text-gray-900 ml-4">Products</a> -->
          <a href="#contact" class="text-gray-600 hover:text-gray-900 ml-4">Contact<span class="text-xs ml-1">></span></a>
        </nav>
      </div>

      <!-- Mobile Menu -->
      <nav id="mobile-menu" class="lg:hidden hidden px-6 pb-4 space-y-2 bg-white shadow-md">
        <!-- Mobile Search Box -->
        <div class="flex py-2">
          <input type="text" id="mobile-search-input" placeholder="Search jewelry..."
            aria-label="Search jewelry" />
          <button id="mobile-search-btn"
            class="bg-gray-800 text-white px-4 py-2 rounded-r-full hover:bg-gray-700 transition" aria-label="Search">
            Search
          </button>
        </div>
        <a href="#home" class="block text-gray-600 py-2">Home</a>

        <% if (session && session.user) { %>
          <a href="/user/account" class="block text-gray-600 hover:text-gray-900 py-2">My Account</a>
        <% } else { %>
          <a href="/user/login" class="block text-gray-600 hover:text-gray-900 py-2">Login</a>
        <% } %>

        <a href="/index/#products" class="block text-gray-600 py-2">Products</a>
        <a href="#contact" class="block text-gray-600 py-2">Contact</a>
            <!-- Cart Button for Mobile -->
            <button id="mobile-cart-btn"
            class="relative bg-gray-800 text-white px-4 py-2 rounded hover:bg-gray-700 w-full text-left">
